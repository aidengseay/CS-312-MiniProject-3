<%- include("partials/header.ejs", {user}) %>

<body>

    <!-- signout option -->
    <div class="small-white-box">
        <form action="/signout" method="POST">
            <h1 class="small-prompt">Log Out</h1>
            <br>
            <input class="submit-btn button" type="submit" value="Submit">
        </form>
    </div>

    <!-- change display name and password option -->
    <div class="small-tan-box">
        <form action="/change-account" method="POST">
            <h1 class="small-prompt">Change Display Name and Password</h1>
            <br>
            <input class="small-write-prompt" type="text" name="username" placeholder="New Display Name" required/>
            <input class="small-write-prompt" type="password" name="password" placeholder="New Password" required/>
            <br>
            <input class="submit-btn button" type="submit" value="Submit Changes">
        </form>
    </div>

    <!-- delete account option -->
    <div class="small-white-box">
        <form action="/delete-account" method="POST">
            <h1 class="small-prompt">Delete Account</h1>
            <br>
            <input class="submit-btn button" type="submit" value="Delete">
        </form>
    </div>

</body>